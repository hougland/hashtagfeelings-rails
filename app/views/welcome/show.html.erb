<% if !flash[:error].nil? %>
    <div><%= flash[:error] %></div>
<% end %>

<div class="page-header">
  <h2>You said you feel <%= params[:feeling] %>...</h2>
  <h1 id="timeline">check out <span class="hashtag-name"><%= @hashtag["name"] %>:</span></h1>
</div>
<div class="row">


  <% @tweets.each_with_index do |tweet, index| %>
  <div class="tweets">

        <blockquote class="twitter-tweet">
          <a href="https://twitter.com/Interior/status/<%= tweet.id %>"></a>
        </blockquote>

        <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>

  <% end %>
</div>

</div>
