<div class="page-header jumbotron">
  <div class="container">
    <h1 class="how-do-you-feel">check out "<%= @hashtag["name"] %>"</h1>
  </div>
</div>

<div class="container">
  <%= render partial: "layouts/flash_messages", flash: flash %>
</div>

<div class="container">
  <div class="row tweets-row">
    <% @tweets.each_with_index do |tweet, index| %>
      <div class="tweets">
        <blockquote class="twitter-tweet">
          <a href="https://twitter.com/Interior/status/<%= tweet.id %>"></a>
        </blockquote>
      </div>
    <% end %>
  </div>
</div>
